<div class="container d-flex flex-column pt-5 justify-content-around align-items-center">
<%= render partial: "partials/user", locals: {user: @user} %>

<section class="bio-section">
  <h2 class="bio">Bio</h2>
  <p><%= @user.bio %></p>
</section>

<section class="posts-section">
  <h2 class="num-post">Num of Posts</h2>
  <div class="posts-container">
    <ul class="posts-list">
    <% @posts.each do |post| %>
      <%= render partial: "partials/post", locals: {post: post} %>
    <% end %>
    </ul>
  </div>
  <%= link_to user_posts_path(@user.id) do %>
    <button class="numPostBtn">Show all posts</button>
  <% end %>

</section>
<div class="logoutbtn">
<%= button_to "Sign out", destroy_user_session_path, method: :delete, data: {turbo: false}%>
<div>
</div>